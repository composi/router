{
  "name": "@composi/router",
  "version": "0.7.4",
  "description": "A router for @composi/core, allowing conditional rendering of functional components on the client side for SPAs and PWAs.",
  "main": "src/index.js",
  "scripts": {
    "build": "run-s format lint checkjs test",
    "bundle": "rollup -c",
    "checkjs": "tsc --allowJs --checkJs --noEmit --moduleResolution node --target ES6 src/*.js",
    "format": "prettier --no-semi --single-quote --write ./src/*.js",
    "lint": "eslint --config ./.eslintrc.json src",
    "start": "run-s format lint checkjs test",
    "test": "jest --coverage --collectCoverageFrom=src/*.js --collectCoverageFrom=!src/*.map --collectCoverageFrom=!src/*.gz"
  },
  "keywords": [
    "composi",
    "route",
    "router",
    "routing",
    "path",
    "url"
  ],
  "author": "rbiggs",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "eslint": "^4.19.1",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "rollup": "^0.66.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-babel-minify": "^6.0.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "typescript": "^3.0.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
